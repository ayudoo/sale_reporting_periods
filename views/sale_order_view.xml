<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.sales_period</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='date_order']" position="after">
        <field name="sales_period_id"/>
      </xpath>
    </field>
  </record>

  <record id="sale_order_tree" model="ir.ui.view">
    <field name="name">sale.order.list.inherit.sales_period</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.sale_order_tree"/>
    <field name="arch" type="xml">
      <field name="date_order" position="after">
        <field name="sales_period_id" optional="show"/>
      </field>
    </field>
  </record>

</odoo>
